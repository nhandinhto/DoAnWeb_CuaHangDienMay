@using DoAnWeb_QuanLyMatHangDienMay.Models;
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@model GioHang

<h2>Thông tin giỏ hàng</h2>

<div class="container">
    <table class="table">
        <tr style="background-color: orange">
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            @*<th>Hình</th>*@
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th></th>
            <th></th>
        </tr>
        @foreach(CartItem a in Model.dsSP)
        {
            <tr>
                <td>@a.maSP</td>
                <td>@a.tenSP</td>
                <td>@a.donGia</td>
                @*<td>
                    <img src="~/Content/HinhSP/@a.hinh" />
                </td>*@
                <td>@a.soLuong</td>
                <td>@a.thanhTien</td>
                <td>
                    <a class="nav-link" href="/Home/ChiTiet/@a.maSP">Chi tiết sản phẩm</a>
                </td>
                <td>
                    <a class="nav-link" href="/DatHang/XoaMatHang/@a.maSP">Xóa</a>                    
                </td>
            </tr>
        }
        <tr>
            <td colspan="3">Tổng</td>
            <td style="color: red">
                @Model.tongSoLuongMatHang()
            </td>
            <td style="color: red">
                @Model.tongThanhTien()
            </td>
            <td>
                <a class="btn btn-danger" href="/DatHang/TaoDonDatHang">Đặt hàng</a>
            </td>
            <td></td>
        </tr>
    </table>
</div>
