<!DOCTYPE html>
@using DoAnWeb_QuanLyMatHangDienMay.Models;
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="background-color: black">
            <div class="col-md-3">
                @if (Session["kh"] != null)
                {
                    KHACHHANG a = (KHACHHANG)Session["kh"];
                    if (a.MALOAI == "LTK001")
                    {
                    <a href="/Home/Index">
                        <img src="~/Content/HinhSP/logo_Layout.jpg" style="width: 250px; height: 50px" />
                    </a>
                    }
                    else
                    {
                    <a href="/Home/Index1">
                        <img src="~/Content/HinhSP/logo_Layout.jpg" style="width: 250px; height: 50px" />
                    </a>
                    }
                }
                else
                {
                    <a href="/Home/Index">
                        <img src="~/Content/HinhSP/logo_Layout.jpg" style="width: 250px; height: 50px" />
                    </a>
                }
            </div>
            <div class="col-md-3" style="padding-top: 5px">
                <form method="post" action="/Home/TimKiem">
                    <input type="text" placeholder="Nhập vào tên sản phẩm muốn tìm" style="width: 270px; border-radius: 7px" name="txtSearch" />
                    <button type="submit">
                        <img src="~/Content/HinhSP/icon_Kinhlup.png" style="width: 25px; height: 25px" />
                    </button>
                </form>
            </div>
            <div class="col-md-2">
                <span style="color: white">Hotline: <b>1900 1560</b></span>
            </div>
            <div class="col-md-2">
                <a href="/DatHang/XemGioHang" class="btn btn-success mt-1">
                    Xem giỏ hàng
                </a>
            </div>
            <div class="col-md-2" style="color: white">
                @Html.Action("HienThiTen", "Home")
            </div>
        </div>
        <div class="row" style="background-color: greenyellow">
            <ul class="nav">
                <li class="nav-item">
                    @if (Session["kh"] != null)
                    {
                        KHACHHANG a = (KHACHHANG)Session["kh"];
                        if (a.MALOAI == "LTK001")
                        {
                            @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link" })
                        }
                        else
                        {
                            @Html.ActionLink("Trang chủ", "Index1", "Home", null, new { @class = "nav-link" })
                        }
                    }
                    else
                    {
                        @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link" })   
                    }
                </li>
                @if (Session["kh"] != null)
                {
                        KHACHHANG a = (KHACHHANG)Session["kh"];
                        if (a.MALOAI == "LTK002")
                        {
                        <li class="nav-item">
                            @Html.ActionLink("Tin tức", "layDsTinTuc", "Home", null, new { @class = "nav-link" })
                        </li>
                        }
                }                
                <li class="nav-item">
                    @Html.ActionLink("Hỗ trợ", "HoTro", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div>
                    <h4 style="text-transform: uppercase; font-size: 17px" class="mt-3">Danh sách loại thiết bị</h4>
                </div>
                @Html.Action("DSLoaiThietBi", "Home")
                <div>
                    <h4 style="text-transform: uppercase; font-size: 17px" class="mt-3">Danh sách hãng</h4>
                </div>
                @Html.Action("DSNhaSanXuat", "Home")
            </div>
            <div class="col-md-8 mt-3">
                @RenderBody()
            </div>
            <div class="col-md-2 mt-3">
                @Html.Action("TinTuc", "Home")
            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <div class="row" style="background-color: black">
            <div class="col-md-12">
                <center>
                <p style="color: white">Công ty cổ phần điện máy QNN</p>
                <p style="color: white">Địa chỉ: 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP. Hồ Chí Minh</p>
                <p style="color: white">Email: dienmayQNN@gmail.com</p>
            </center>
            </div>
        </div>
    </div>
    <script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    @*<script src="~/Content/bootstrap/js/SanPham.js"></script>*@
</body>
</html>
